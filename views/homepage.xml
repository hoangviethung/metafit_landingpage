                    <!-- Contact  -->
                    <section class="mf_contact">
                        <div class="mf_contact__content mf_container">
                            <div class="contact_ico">
                                <img src="/metafit/static/src/images/contact.png" />
                            </div>
                            <h1 class="mf_title">Liên hệ Metafit</h1>
                            <div class="mf_contact__main-content">
                                <div class="mf_contact__main-content-left">
                                    <p>Abc, Xyz Street. Ditrict 1</p>
                                    <p>Ho Chi Minh City</p>
                                    <p class="hotline">Hotline: 0909.999.999</p>
                                    <div class="mf_contact__gr_ico">
                                        <img src="/metafit/static/src/images/fb-ico.png" alt="Facebook"/>
                                        <img src="/metafit/static/src/images/yt-ico.png" alt="Youtube"/>
                                    </div>
                                </div>
                                <div class="mf_contact__main-content-center">
                                    <div class="form_group">
                                        <label class="form_label" for="name">Tên của bạn<span>*</span></label>
                                        <input type="text" id="name"/>
                                    </div>

                                    <div class="form_group">
                                        <label class="form_label" for="phone">Số điện thoại<span>*</span></label>
                                        <input type="text" id="phone"/>
                                    </div>
                                    <div class="form_group">
                                        <label class="form_label" for="email">Email</label>
                                        <input type="email" id="email"/>
                                    </div>
                                </div>
                                <div class="mf_contact__main-content-right">
                                    <div class="form_group">
                                        <label class="form_label" for="desc">Tin nhắn của bạn</label>
                                        <textarea id="desc" name="desc">
                                        </textarea>
                                    </div>
                                    <button class="mf_button">
                                        <a href="#">Gửi đi</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </xpath>
