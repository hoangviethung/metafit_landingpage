                            <div class="mf_studio__content">
                                <div class="mf_studio__title">
                                    MetaFit Studio
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Contact  -->
                    <section class="mf_contact" id="contact">
                        <img class="decorate decorate_style--03" src="/metafit_landingpage/static/src/images/decorate/3.png" />
                        <div class="container">
                            <h1 class="mf_title">Liên hệ Metafit</h1>
                            <div class="mf_contact__main-content">
                                <div class="mf_contact__main-content-left">
                                    <p class="address">16 Phạm Ngọc Thạch, phường 6, quận 3, TP.HCM.</p>
                                    <p class="hotline">Hotline: 0286.27.27.626</p>
                                    <div class="socials">
                                        <a href="#">
                                            <img src="/metafit_landingpage/static/src/images/facebook.png" />
                                        </a>
                                        <a href="#">
                                            <img src="/metafit_landingpage/static/src/images/youtube.png" />
                                        </a>
                                    </div>
                                </div>
                                <div class="mf_contact__main-content-center">
                                    <div class="form_group">
                                        <label class="form_label" for="name">Tên của bạn<span>*</span>
                                        </label>
                                        <input class="form-control" type="text" id="name"/>
                                    </div>

                                    <div class="form_group">
                                        <label class="form_label" for="phone">Số điện thoại<span>*</span>
                                        </label>
                                        <input class="form-control" type="text" id="phone"/>
                                    </div>
                                    <div class="form_group">
                                        <label class="form_label" for="email">Email</label>
                                        <input class="form-control" type="email" id="email"/>
                                    </div>
                                </div>
                                <div class="mf_contact__main-content-right">
                                    <div class="form_group">
                                        <label class="form_label" for="desc">Tin nhắn của bạn</label>
                                        <textarea class="form-control" id="desc" name="desc"></textarea>
                                    </div>
                                    <button class="mf_button">
                                        <a href="#">Gửi đi</a>
                                    </button>
                                </div>
                            </div>
                        </div>
