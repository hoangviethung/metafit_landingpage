<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mf_homepage" inherit_id="website.homepage" name="Home MetaFit" active="True">
        <xpath expr="//t[@t-call='website.layout']" position="replace">
            <t t-call="website.layout">
                <t t-set="pageName" t-value="'wrapwrap_mf_homepage'"/>
                <div id="wrap" class="oe_structure oe_structure_mf_homepage">
                    <!-- Hero Banner  -->
                    <section class="mf_section_hero_banner" id="hero_banner">
                        <div class="container h-100">
                            <div class="row h-100 align-items-center">
                                <div class="col-lg-5">
                                    <div class="content">
                                        <h1 class="title">
                                            <span>B.E.S.T</span>
                                            <span>Bio Electrical</span>
                                            <span>Smart Training</span>
                                        </h1>
                                        <p class="description">Thế hệ phòng tập mới, ứng dụng công nghệ mang tính cách mạng để đạt hiệu quả trong tập luyện.</p>
                                        <a class="btn btn-primary min-width-large" href="#contact">Trải nghiệm ngay</a>
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="image">
                                        <img src="/metafit_landingpage/static/src/images/hero-banner/model.png" attr="BIO-ELECTRICAL-SMART-TRAINING"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Bio Electrical -->
                    <section class="mf_section_bio_electrical" id="bio_electrical">
                        <img class="decorate decorate_style--01" src="/metafit_landingpage/static/src/images/decorate/1.png" />
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="image">
                                        <img class="d-none d-lg-block" src="/metafit_landingpage/static/src/images/bio-electrical/desktop.png"/>
                                        <img class="d-lg-none" src="/metafit_landingpage/static/src/images/bio-electrical/mobile.png"/>
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="content">
                                        <h2 class="mf_title">Bio Electrical<br/>
                                        Xung điện sinh học </h2>
                                        <div class="content-box content-box-has-border">
                                            <div class="top-left-square"></div>
                                            <div class="top-right-square"></div>
                                            <div class="bottom-left-square"></div>
                                            <div class="bottom-right-square"></div>
                                            <p>Xung điện sinh học là dòng điện tự nhiên của cơ thể người, chúng kích hoạt mọi sự vận động  của cơ bắp. Bộ suit SYMBIONT được thiết kế dựa trên nguyên lý hoạt động này để tạo ra một mô hình tập luyện mới đầy tính đột phá: gửi xung điện trực tiếp đến cơ để gây ra sự vận động của cơ.</p>
                                        </div>
                                        <a class="btn btn-light min-width-large d-none d-lg-inline-block" href="#contact">Trải nghiệm ngay</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Symbiont -->
                    <section class="mf_section_symbiont" id="symbiont">
                        <img class="decorate decorate_style--02" src="/metafit_landingpage/static/src/images/decorate/2.png" />
                        <div class="container">
                            <h2 class="mf_title text-center text-primary">Symbiont
                                <br/>
                                    Ứng dụng của công nghệ BET
                            </h2>
                            <div class="content">
                                <div class="swiper symbiont-swiper">
                                    <div class="swiper-wrapper">
                                        <div class="swiper-slide">
                                            <div class="item-content">
                                                <h6>1.</h6>
                                                <p>
                                                    Sản phẩm của sự kết hợp giữa ngành khoa học thần kinh, y học, sinh học, vật liệu mới, công nghệ mới. 
                                                </p>
                                            </div>
                                        </div>
                                        <div class="swiper-slide">
                                            <div class="item-content">
                                                <h6>2.</h6>
                                                <p>
                                                    Tích hợp các cảm biến sinh học 
                                                </p>
                                            </div>
                                        </div>
                                        <div class="swiper-slide">
                                            <div class="item-content">
                                                <h6>3.</h6>
                                                <p>
                                                    Tích hợp 24 điện cực khô phân bổ trên các nhóm cơ chính 
                                                </p>
                                            </div>
                                        </div>
                                        <div class="swiper-slide">
                                            <div class="item-content">
                                                <h6>4.</h6>
                                                <p>
                                                    Chẩn đoán sức khỏe cơ bắp 
                                                </p>
                                            </div>
                                        </div>
                                        <div class="swiper-slide">
                                            <div class="item-content">
                                                <h6>5.</h6>
                                                <p>
                                                    Làm bằng chất liệu công nghệ cao, kháng khuẩn, độ bền cao 
                                                </p>
                                            </div>
                                        </div>
                                        <div class="swiper-slide">
                                            <div class="item-content">
                                                <h6>6.</h6>
                                                <p>
                                                    Dễ dàng giặt bằng máy thông thường 
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                                <div class="content-left">
                                    <div class="item-content">
                                        <h6>1.</h6>
                                        <p>
                                            Sản phẩm của sự kết hợp giữa ngành khoa học thần kinh, y học, sinh học, vật liệu mới, công nghệ mới. 
                                        </p>
                                    </div>
                                    <div class="item-content">
                                        <h6>2.</h6>
                                        <p>
                                            Tích hợp các cảm biến sinh học
                                        </p>
                                    </div>
                                    <div class="item-content">
                                        <h6>3.</h6>
                                        <p>
                                            Tích hợp 24 điện cực khô phân bổ trên các nhóm cơ chính
                                        </p>
                                    </div>
                                </div>
                                <div class="content-center">
                                    <img src="/metafit_landingpage/static/src/images/symbiont.png" alt="SYMBIONT" />
                                </div>
                                <div class="content-right">
                                    <div class="item-content">
                                        <h6>4.</h6>
                                        <p>
                                            Chẩn đoán sức khỏe cơ bắp.
                                        </p>
                                    </div>
                                    <div class="item-content">
                                        <h6>5.</h6>
                                        <p>
                                            Làm bằng chất liệu công nghệ cao, kháng khuẩn, độ bền cao.
                                        </p>
                                    </div>
                                    <div class="item-content">
                                        <h6>6.</h6>
                                        <p>
                                            Dễ dàng giặt bằng máy thông thường.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-4 d-none d-lg-block">
                                <a class="btn btn-light min-width-large" href="#contact">Thử ngay</a>
                            </div>
                        </div>
                    </section>
                    <!-- Training  -->
                    <section class="mf_section_training" id="training">
                        <img class="decorate decorate_style--01" src="/metafit_landingpage/static/src/images/decorate/1.png" />
                        <div class="container">
                            <h2 class="mf_title text-center">Hình thức tập luyện</h2>
                            <div class="list-training">
                                <div class="item-training">
                                    <img class="d-none d-md-block" src="/metafit_landingpage/static/src/images/training/1-desktop.png" alt="Fit Club" />
                                    <img class="d-md-none" src="/metafit_landingpage/static/src/images/training/1-mobile.png" alt="Fit Club" />
                                    <div class="content">
                                        <h3 class="title">Fit Club</h3>
                                        <p class="description">Tập luyện giờ đây thật hào hứng với các bài tập nhóm tạo sự tương tác giữa những người tập. Các động tác được thiết kế sinh động, linh hoạt giúp tăng hiệu quả và cải thiện cảm xúc</p>
                                    </div>
                                    <a class="btn btn-dark min-width-large" href="#contact">Gọi ngay</a>
                                </div>
                                <div class="item-training">
                                    <img class="d-none d-md-block" src="/metafit_landingpage/static/src/images/training/2-desktop.png" alt="Fit Premium" />
                                    <img class="d-md-none" src="/metafit_landingpage/static/src/images/training/2-mobile.png" alt="Fit Premium" />
                                    <div class="content">
                                        <h3 class="title">Fit Premium</h3>
                                        <p class="description">Trải nghiệm không gian tập luyện riêng tư, lộ trình tập luyện được chăm sóc bởi Huấn luyện viên giúp người tập đạt hiệu quả tốt nhất.</p>
                                    </div>
                                    <a class="btn btn-dark min-width-large" href="#contact">Gọi ngay</a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Benefit -->
                    <section class="mf_section_benefit" id="benefit">
                        <div class="container">
                            <h2 class="mf_title text-primary text-center">Lợi ích tập luyện</h2>
                            <div class="mf_benefit_wrapper">
                                <div class="row align-items-center">
                                    <div class="col-lg-5">
                                        <div class="content-box content-box-has-border border-color-primary">
                                            <div class="top-left-square"></div>
                                            <div class="top-right-square"></div>
                                            <div class="bottom-left-square"></div>
                                            <div class="bottom-right-square"></div>
                                            <div class="list-benefit">
                                                <div class="item-benefit">
                                                    <div class="icon">
                                                        <img src="/metafit_landingpage/static/src/images/icons/benefit.png" />
                                                    </div>
                                                    <p>Tiết kiệm thời gian</p>
                                                </div>
                                                <div class="item-benefit">
                                                    <div class="icon">
                                                        <img src="/metafit_landingpage/static/src/images/icons/benefit.png" />
                                                    </div>
                                                    <p>Kích thích lưu thông máu</p>
                                                </div>
                                                <div class="item-benefit">
                                                    <div class="icon">
                                                        <img src="/metafit_landingpage/static/src/images/icons/benefit.png" />
                                                    </div>
                                                    <p>Xây dựng cơ bắp</p>
                                                </div>
                                                <div class="item-benefit">
                                                    <div class="icon">
                                                        <img src="/metafit_landingpage/static/src/images/icons/benefit.png" />
                                                    </div>
                                                    <p>Cải thiện vóc dáng</p>
                                                </div>
                                                <div class="item-benefit">
                                                    <div class="icon">
                                                        <img src="/metafit_landingpage/static/src/images/icons/benefit.png" />
                                                    </div>
                                                    <p>Cải thiện sức bền</p>
                                                </div>
                                                <div class="item-benefit">
                                                    <div class="icon">
                                                        <img src="/metafit_landingpage/static/src/images/icons/benefit.png" />
                                                    </div>
                                                    <p>Cân bằng hệ thống cơ bắp</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-7">
                                        <div class="swiper benefit-swiper">
                                            <div class="swiper-wrapper">
                                                <t t-foreach="range(9)" t-as="studio">
                                                    <div class="swiper-slide">
                                                        <img t-att-src="'/metafit_landingpage/static/src/images/benefit/' + str(studio_index + 1) + '.png'" />
                                                    </div>
                                                </t>
                                            </div>
                                            <div class="swiper-pagination"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center mt-4">
                                    <a class="btn btn-light" href="#contact">Trải nghiệm ngay</a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Studio -->
                    <section class="mf_section_studio" id="studio">
                        <div class="swiper studio-swiper">
                            <div class="swiper-wrapper">
                                <t t-foreach="range(8)" t-as="studio">
                                    <div class="swiper-slide">
                                        <img t-att-src="'/metafit_landingpage/static/src/images/studio/' + str(studio_index + 1) + '.png'" />
                                    </div>
                                </t>
                            </div>
                            <div class="swiper-pagination"></div>
                            <h2 class="watermark">
                                MetaFit
                                <br/>
                                Studio
                            </h2>
                        </div>
                    </section>
                    <!-- Contact  -->
                    <section class="mf_section_contact" id="contact">
                        <img class="decorate decorate_style--03" src="/metafit_landingpage/static/src/images/decorate/3.png" />
                        <div class="container">
                            <h2 class="mf_title text-center">Liên hệ Metafit</h2>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="contacts-information">
                                        <div class="item-contact address">16 Phạm Ngọc Thạch, Phường 6 <br/>
                                        Quận 3, TP.HCM.
                                        </div>
                                        <div class="item-contact hotline">Hotline: 0286.27.27.626</div>
                                        <div class="item-contact socials">
                                            <a href="#">
                                                <img src="/metafit_landingpage/static/src/images/icons/facebook.png" />
                                            </a>
                                            <a href="#">
                                                <img src="/metafit_landingpage/static/src/images/icons/youtube.png" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8 s_website_form">
                                    <form class="mf_form_contact" action="/website/form/" enctype="multipart/form-data" data-model_name="res.partner" data-success-mode="redirect" data-success-page="/" data-pre-fill="true" method="post">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form_group">
                                                    <label class="form_label" for="name">Tên của bạn<span>*</span>
                                                    </label>
                                                    <input class="form-control s_website_form_input" name="name" type="text" id="name"/>
                                                </div>
                                                <div class="form_group">
                                                    <label class="form_label" for="phone">Số điện thoại<span>*</span>
                                                    </label>
                                                    <input class="form-control s_website_form_input" type="text" name="phone" id="phone"/>
                                                </div>
                                                <div class="form_group">
                                                    <label class="form_label" for="email">Email</label>
                                                    <input class="form-control s_website_form_input" name="email" type="email" id="email"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form_group">
                                                    <label class="form_label" for="desc">Tin nhắn của bạn</label>
                                                    <textarea class="form-control s_website_form_input" id="desc" name="note"></textarea>
                                                </div>
                                                <div class="form_submit">
                                                    <button class="btn btn-dark w-100 s_website_form_send">Gửi đi</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </xpath>
    </template>
</odoo>